{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "jsx": "preserve",
    "allowJs": false,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "types": ["vue"],
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"]
}
